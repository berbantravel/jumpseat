generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String  @id @default(uuid())
  name             String
  email            String  @unique
  password         String
  verificationCode String?
  isVerified       Boolean @default(false)
  createdAt        DateTime @default(now())
}
